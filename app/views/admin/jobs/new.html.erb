<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">新增一个职缺</h1>

    <%= simple_form_for [:admin,@job] do |f| %>
      <%= f.input :title, label: "标题"%>
      <%= f.input :description, label: "内容"%>
      <%= f.input :wage_lower_bound, label: "最低工资"%>
      <%= f.input :wage_upper_bound, label: "最高工资"%>
      <%= f.input :contact_email, label: "邮箱"%>
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
      <!-- <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %> -->
      <%= f.input :is_hidden, label: "隐藏"%>
      <%= f.submit "提交", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
