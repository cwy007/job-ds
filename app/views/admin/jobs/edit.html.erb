<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">修改职缺</h1>

    <%= simple_form_for [:admin,@job] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :wage_lower_bound %>
      <%= f.input :wage_upper_bound %>
      <%= f.input :contact_email %>
      <%= f.input :is_hidden %>
      <%= f.submit "Submit" %>
    <% end %>
    <br/>
    <%= link_to "Back", jobs_path, class: "btn btn-primary" %>
  </div>
</div>
