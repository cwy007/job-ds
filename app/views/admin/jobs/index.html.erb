<div class="pull-right">
  <%= link_to "Add a job", new_admin_job_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <td>职缺</td>
      <td>发布时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= render_job_status(job) %>
          <%= link_to job.title, admin_job_path(job) %>
        </td>
        <td><%= job.created_at %></td>
        <td>
          <% if job.is_hidden %>
            <%= link_to "Publish", publish_admin_job_path(job), method: :post, class: "btn btn-sm btn-default" %>
          <% else %>
            <%= link_to "Hide", hide_admin_job_path(job), method: :post, class: "btn btn-sm btn-default" %>
          <% end %>
          |
          <%= link_to "Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default" %>
          |
          <%= link_to "Delete", admin_job_path(job), class: "btn btn-sm btn-default",
                     method: :delete, data: { confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
