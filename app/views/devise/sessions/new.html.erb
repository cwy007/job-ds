<div id="devise">
  <div id="log-in">
    <h2>登 录</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: "邮 箱"%>
        <%= f.input :password, required: false, label: "密 码"%>
        <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "登录", class: "btn btn-success btn-block"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
