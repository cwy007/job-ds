<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1><%= @category.name %></h1>
    <%= link_to "职位列表 -->", jobs_path, class: "pull-right" %>
    <hr>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <td>职缺</td>
      <td>类别</td>
      <td>工资下限</td>
      <td>工资上限</td>
      <td>发布时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= link_to job.title, job_path(job) %>
        </td>
        <td>
          <%= job.category.name %>
        </td>
        <td>
          <%= job.wage_lower_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td><%= job.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @jobs, :container => false %>
</div>
