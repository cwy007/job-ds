<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1><%= @category.name %></h1>
    <%= link_to "职位列表 -->", jobs_path, class: "pull-right" %>
    <hr>
    <ul class="job-list">
      <% @jobs.each do |job| %>
      <a href="/jobs/<%= job.id %>">
        <li class="job-primary">
          <div class="info-primary">
            <h3><%= job.title %></h3>
            <p class="red"><%= job.wage_lower_bound %> K - <%= job.wage_upper_bound %>K </p>
          </div>
          <div class="info-time">
            <p class="time"><%= newTimeFormat(job.created_at) %></p>
          </div>
        </li>
      </a>
      <% end %>
    </ul>
    <div class="digg_pagination">
      <%= will_paginate @jobs, :container => false %>
    </div>
  </div>
</div>
